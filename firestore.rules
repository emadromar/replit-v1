rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. Stores & Products (Public Read, Owner Write)
    match /stores/{storeId} {
      allow read: if true; // Customers need to see the store
      allow write: if request.auth != null && request.auth.uid == storeId; // Only owner can edit

      // Apply to all subcollections (products, categories, etc.)
      match /{allChildren=**} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == storeId;
      }
    }

    // 2. User/Admin Profiles (Private)
    match /admins/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 3. Orders (Public Create, Owner Read/Update)
    // This is needed so unauthenticated customers can place orders
    match /orders/{orderId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null; 
    }

    // 4. Default Fallback (Secure by default)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}